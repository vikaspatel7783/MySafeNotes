<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vikas.mobile.mysafenotes">

    <application
        android:name=".MySafeNotesApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySafeNotes">

        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:theme="@style/Theme.MySafeNotes.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.AddUpdateNoteActivity" android:label="@string/screen_title_add_note"/>
    </application>

</manifest>