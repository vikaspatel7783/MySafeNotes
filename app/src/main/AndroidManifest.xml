<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vikas.mobile.mynotes">

    <application
        android:name="com.vikas.mobile.mynotes.MySafeNotesApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        
        android:supportsRtl="true"
        android:theme="@style/Theme.MySafeNotes">

        <activity
            android:name="com.vikas.mobile.mynotes.ui.dashboard.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.vikas.mobile.mynotes.ui.AddUpdateNoteActivity"
            android:parentActivityName=".ui.dashboard.DashboardActivity"/>
        <activity android:name=".ui.SettingsActivity"
            android:parentActivityName=".ui.dashboard.DashboardActivity"
            android:label="@string/appbar_settings"/>
    </application>

</manifest>